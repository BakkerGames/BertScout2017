<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stand_scouting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"

    tools:context="com.bertrobotics.bertscout2017.StandScoutingFragment">

    <TextView
        android:text="High Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_label"
        android:layout_alignStart="@+id/auto_label"
        android:layout_marginTop="15dp"
        android:id="@+id/auto_high_goal_label"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/auto_label" />

    <TextView
        android:text="High Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teleop_label"
        android:layout_alignStart="@+id/teleop_label"
        android:layout_marginTop="15dp"
        android:id="@+id/teleop_high_goal_label"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/teleop_label" />

    <TextView
        android:text="Low Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/teleop_low_goal_label"
        android:textSize="30sp"
        android:layout_below="@+id/teleop_high_goal_label"
        android:layout_alignStart="@+id/teleop_high_goal_label"
        android:layout_alignLeft="@+id/teleop_high_goal_label" />

    <TextView
        android:text="Endgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teleop_crossings_label"
        android:layout_alignStart="@+id/teleop_crossings_label"
        android:layout_marginTop="15dp"
        android:id="@+id/teleop_endgame_label"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/teleop_crossings_label" />

    <TextView
        android:text="Crossings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/teleop_crossings_label"
        android:textSize="30sp"
        android:layout_below="@+id/teleop_low_goal_label"
        android:layout_alignStart="@+id/teleop_low_goal_label"
        android:layout_alignLeft="@+id/teleop_low_goal_label" />


    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/auto_low_goal_minus_btn"
        android:textSize="32sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:width="20dp"
        android:layout_width="wrap_content"
        android:minHeight="52dp"
        android:minWidth="54dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_alignBaseline="@+id/auto_low_goal_label"
        android:layout_alignBottom="@+id/auto_low_goal_label"
        android:layout_alignStart="@+id/auto_high_goal_minus_btn"
        android:layout_alignLeft="@+id/auto_high_goal_minus_btn" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/defense_spinner"
        android:textSize="30sp"
        android:minHeight="45dp"
        android:layout_toEndOf="@+id/auto_low_goal_minus_btn"
        android:layout_alignStart="@+id/auto_low_goal_minus_btn"
        android:layout_alignTop="@+id/auto_defense_label"
        android:layout_toRightOf="@+id/auto_low_goal_minus_btn"
        android:layout_alignLeft="@+id/auto_low_goal_minus_btn" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endgame_spinner"
        android:textSize="30sp"
        android:layout_alignTop="@+id/teleop_endgame_label"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/teleop_crossings_minus_btn"
        android:minHeight="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/teleop_crossings_minus_btn" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_high_goal_minus_btn"
        android:textSize="32sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:width="20dp"
        android:layout_width="wrap_content"
        android:minHeight="52dp"
        android:minWidth="54dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/teleop_label"
        android:layout_alignStart="@+id/defense_spinner"
        android:layout_alignLeft="@+id/defense_spinner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/match_spinner"
        android:textSize="30sp"
        android:layout_marginLeft="300dp"
        android:layout_above="@+id/team_label"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/match_label"
        android:layout_alignParentRight="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/team_spinner"
        android:textSize="30sp"
        android:layout_above="@+id/auto_label"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/match_spinner"
        android:layout_alignTop="@+id/team_label"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/match_spinner" />

    <TextView
        android:text="Team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team_label"
        android:textSize="36sp"
        android:layout_below="@+id/match_label"
        android:layout_alignStart="@+id/match_label"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@+id/match_label" />

    <TextView
        android:text="Low Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_low_goal_label"
        android:textSize="30sp"
        android:layout_below="@+id/auto_high_goal_label"
        android:layout_alignStart="@+id/auto_high_goal_label"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/auto_high_goal_label" />

    <TextView
        android:text="Defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_defense_label"
        android:textSize="30sp"
        android:layout_below="@+id/auto_low_goal_minus_btn"
        android:layout_alignStart="@+id/auto_low_goal_label"
        android:layout_marginTop="9dp"
        android:layout_alignLeft="@+id/auto_low_goal_label" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_high_goal_plus_btn"
        android:minWidth="54dp"
        android:minHeight="52dp"
        android:textSize="32sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/auto_high_goal_minus_btn"
        android:layout_alignBottom="@+id/auto_high_goal_minus_btn"
        android:layout_toEndOf="@+id/auto_high_goal_text"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/auto_high_goal_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_low_goal_plus_btn"
        android:minWidth="54dp"
        android:minHeight="52dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_alignBaseline="@+id/auto_low_goal_minus_btn"
        android:layout_alignBottom="@+id/auto_low_goal_minus_btn"
        android:layout_alignStart="@+id/auto_high_goal_plus_btn"
        android:text="+"
        android:textSize="32sp"
        android:layout_alignLeft="@+id/auto_high_goal_plus_btn" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_crossings_minus_btn"
        android:textSize="32sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:width="20dp"
        android:layout_width="wrap_content"
        android:minHeight="52dp"
        android:minWidth="54dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_alignBaseline="@+id/teleop_crossings_label"
        android:layout_alignBottom="@+id/teleop_crossings_label"
        android:layout_alignStart="@+id/teleop_low_goal_minus_btn"
        android:layout_alignLeft="@+id/teleop_low_goal_minus_btn" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_high_goal_text"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/teleop_high_goal_plus_btn"
        android:layout_alignStart="@+id/auto_low_goal_text"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/auto_low_goal_text" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_high_goal_plus_btn"
        android:minWidth="54dp"
        android:minHeight="52dp"
        android:textSize="32sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_alignBaseline="@+id/teleop_high_goal_minus_btn"
        android:layout_alignBottom="@+id/teleop_high_goal_minus_btn"
        android:layout_alignStart="@+id/auto_low_goal_plus_btn"
        android:layout_alignLeft="@+id/auto_low_goal_plus_btn" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_crossings_plus_btn"
        android:minWidth="54dp"
        android:minHeight="52dp"
        android:textSize="32sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_alignBaseline="@+id/teleop_crossings_minus_btn"
        android:layout_alignBottom="@+id/teleop_crossings_minus_btn"
        android:layout_alignStart="@+id/teleop_low_goal_plus_btn"
        android:layout_alignLeft="@+id/teleop_low_goal_plus_btn" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_low_goal_text"
        android:textSize="30sp"
        android:layout_above="@+id/defense_spinner"
        android:layout_toStartOf="@+id/auto_high_goal_plus_btn"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/auto_high_goal_plus_btn" />

    <TextView
        android:text="Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:id="@+id/match_label"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Autonomous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/auto_label"
        android:textSize="36sp"
        android:textColor="#000000"
        android:layout_below="@+id/team_label"
        android:layout_alignStart="@+id/team_label"
        android:layout_alignLeft="@+id/team_label" />

    <TextView
        android:text="TeleOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_label"
        android:textSize="36sp"
        android:textColor="#000000"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/defense_spinner"
        android:layout_alignStart="@+id/auto_defense_label"
        android:layout_alignLeft="@+id/auto_defense_label" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/auto_high_goal_minus_btn"
        android:textSize="32sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:width="20dp"
        android:layout_width="wrap_content"
        android:minHeight="52dp"
        android:minWidth="54dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/auto_label"
        android:layout_alignStart="@+id/team_spinner"
        android:layout_alignLeft="@+id/team_spinner" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_high_goal_text"
        android:textSize="30sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="25dp"
        android:layout_alignBaseline="@+id/auto_high_goal_plus_btn"
        android:layout_alignBottom="@+id/auto_high_goal_plus_btn"
        android:layout_toEndOf="@+id/auto_high_goal_minus_btn"
        android:layout_toRightOf="@+id/auto_high_goal_minus_btn" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_low_goal_minus_btn"
        android:textSize="32sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:width="20dp"
        android:layout_width="wrap_content"
        android:minHeight="52dp"
        android:minWidth="54dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/teleop_high_goal_minus_btn"
        android:layout_alignStart="@+id/teleop_high_goal_minus_btn"
        android:layout_alignLeft="@+id/teleop_high_goal_minus_btn" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_crossings_text"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/teleop_crossings_plus_btn"
        android:layout_alignTop="@+id/teleop_crossings_label"
        android:layout_alignStart="@+id/teleop_low_goal_text"
        android:layout_alignLeft="@+id/teleop_low_goal_text" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_low_goal_plus_btn"
        android:minWidth="54dp"
        android:minHeight="52dp"
        android:textSize="32sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:elevation="1dp"
        android:layout_alignBaseline="@+id/teleop_low_goal_text"
        android:layout_alignBottom="@+id/teleop_low_goal_text"
        android:layout_alignStart="@+id/teleop_high_goal_plus_btn"
        android:layout_alignLeft="@+id/teleop_high_goal_plus_btn" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_low_goal_text"
        android:textSize="30sp"
        android:layout_above="@+id/teleop_crossings_plus_btn"
        android:layout_alignStart="@+id/teleop_high_goal_text"
        android:layout_alignLeft="@+id/teleop_high_goal_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:ems="10"
        android:layout_below="@+id/comments_label"
        android:layout_alignLeft="@+id/comments_label"
        android:layout_alignStart="@+id/comments_label"
        android:id="@+id/comments_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="120dp"
        android:maxLength="200"
        android:scrollHorizontally="false" />

    <TextView
        android:text="Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comments_label"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="36sp"
        android:layout_below="@+id/endgame_spinner"
        android:layout_alignLeft="@+id/teleop_endgame_label"
        android:layout_alignStart="@+id/teleop_endgame_label"
        android:layout_marginTop="10dp" />

</RelativeLayout>
