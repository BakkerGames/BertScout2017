<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pit_scouting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- team -->

    <TextView
        android:id="@+id/pit_team_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Team"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/pit_team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pit_team_label"
        android:layout_marginLeft="15sp"
        android:layout_toEndOf="@+id/pit_team_label"
        android:layout_toRightOf="@+id/pit_team_label"
        android:ems="3"
        android:inputType="number"
        android:text=""
        android:textSize="36sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/pit_team_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pit_team_label"
        android:layout_marginLeft="15sp"
        android:layout_toEndOf="@+id/pit_team_label"
        android:layout_toRightOf="@+id/pit_team_label"
        android:ems="3"
        android:inputType="number"
        android:text=""
        android:textSize="36sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/stand_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pit_team_number"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/pit_team_number"
        android:layout_toRightOf="@+id/pit_team_number"
        android:minWidth="110dp"
        android:paddingBottom="0sp"
        android:paddingLeft="10sp"
        android:paddingTop="0sp"
        android:text="LOAD"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pit_team_label"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/pit_scouting_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="0sp">

            <!-- team_name -->

            <TextView
                android:id="@+id/pit_team_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0sp"
                android:text="Name"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_name_label"
                android:layout_marginLeft="10sp"
                android:layout_toEndOf="@+id/pit_team_name_label"
                android:layout_toRightOf="@+id/pit_team_name_label"
                android:ems="12"
                android:inputType="textCapWords"
                android:textSize="36sp" />

            <!-- team_years -->

            <TextView
                android:id="@+id/pit_team_years_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_team_name_label"
                android:layout_marginBottom="0sp"
                android:text="Team Years"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_team_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_years_label"
                android:layout_marginLeft="170sp"
                android:layout_toEndOf="@+id/pit_team_years_label"
                android:layout_toRightOf="@+id/pit_team_years_label"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_team_years_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_years"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_team_years"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_team_years_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_years_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_team_years_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- team_members -->

            <TextView
                android:id="@+id/pit_team_members_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_team_years_label"
                android:layout_marginBottom="0sp"
                android:text="Team Members"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_team_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_members_label"
                android:layout_alignBottom="@+id/pit_team_members_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_team_members_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_members"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_team_members"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="32sp" />

            <Button
                android:id="@+id/pit_team_members_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_team_members_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_team_members_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="32sp" />

            <!-- height -->

            <TextView
                android:id="@+id/pit_height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_team_members_label"
                android:layout_marginBottom="0sp"
                android:layout_marginTop="0sp"
                android:text="Height (inches)"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_height_label"
                android:layout_alignBottom="@+id/pit_height_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_height_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_height"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_height"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_height_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_height_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_height_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- weight -->

            <TextView
                android:id="@+id/pit_weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_height_label"
                android:layout_marginBottom="0sp"
                android:text="Weight (pounds)"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_weight_label"
                android:layout_alignBottom="@+id/pit_weight_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_weight_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_weight"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_weight"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_weight_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_weight_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_weight_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- num_cims -->

            <TextView
                android:id="@+id/pit_num_cims_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_weight_label"
                android:layout_marginBottom="0sp"
                android:text="Number of CIMs"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_num_cims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_num_cims_label"
                android:layout_alignBottom="@+id/pit_num_cims_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_num_cims_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_num_cims"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_num_cims"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_num_cims_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_num_cims_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_num_cims_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- max_speed -->

            <TextView
                android:id="@+id/pit_max_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_num_cims_label"
                android:layout_marginBottom="0sp"
                android:text="Max Speed (feet/s)"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_max_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_max_speed_label"
                android:layout_alignBottom="@+id/pit_max_speed_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_max_speed_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_max_speed"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_max_speed"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_max_speed_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_max_speed_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_max_speed_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- wheel_type -->

            <TextView
                android:id="@+id/pit_wheel_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_max_speed_label"
                android:layout_marginBottom="0sp"
                android:text="Wheel Type"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_wheel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_wheel_type_label"
                android:layout_alignBottom="@+id/pit_wheel_type_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/pit_team_years"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="36sp" />

            <!-- wheel_layout -->

            <TextView
                android:id="@+id/pit_wheel_layout_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_wheel_type_label"
                android:layout_marginBottom="0sp"
                android:text="Wheel Layout"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_wheel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_wheel_layout_label"
                android:layout_alignBottom="@+id/pit_wheel_layout_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/pit_team_years"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="36sp" />

            <!-- max_fuel -->

            <TextView
                android:id="@+id/pit_max_fuel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pit_wheel_layout_label"
                android:layout_marginBottom="0sp"
                android:text="Maximum Fuel"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_max_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_max_fuel_label"
                android:layout_alignBottom="@+id/pit_max_fuel_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_max_fuel_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_max_fuel"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_max_fuel"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_max_fuel_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_max_fuel_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_max_fuel_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- shooter_type -->

            <TextView
                android:id="@+id/pit_shooter_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_max_fuel_label"
                android:layout_marginBottom="0sp"
                android:text="Shooter Type"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_shooter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_shooter_type_label"
                android:layout_alignBottom="@+id/pit_shooter_type_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/pit_team_years"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="36sp" />

            <!-- shoot_speed -->

            <TextView
                android:id="@+id/pit_shoot_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_shooter_type_label"
                android:layout_marginBottom="0sp"
                android:text="Shoot Speed (balls/s)"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_shoot_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_shoot_speed_label"
                android:layout_alignBottom="@+id/pit_shoot_speed_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_shoot_speed_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_shoot_speed"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_shoot_speed"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_shoot_speed_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_shoot_speed_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_shoot_speed_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- starting_posision -->

            <TextView
                android:id="@+id/pit_starting_position_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_shoot_speed_label"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0sp"
                android:layout_marginTop="0sp"
                android:text="Starting Positions"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/pit_start_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_starting_position_label"
                android:layout_centerHorizontal="true"
                android:ems="6"
                android:textOff=" "
                android:textOn="Center"
                android:textSize="24sp" />

            <ToggleButton
                android:id="@+id/pit_start_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pit_start_center"
                android:layout_marginRight="30sp"
                android:layout_toLeftOf="@+id/pit_start_center"
                android:ems="6"
                android:textOff=" "
                android:textOn="Boiler"
                android:textSize="24sp" />

            <ToggleButton
                android:id="@+id/pit_start_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pit_start_center"
                android:layout_marginLeft="30sp"
                android:layout_toRightOf="@+id/pit_start_center"
                android:ems="6"
                android:textOff=" "
                android:textOn="Non-Boiler"
                android:textSize="24sp" />

            <!-- auto_num_modes -->

            <TextView
                android:id="@+id/pit_auto_num_modes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_start_center"
                android:layout_marginBottom="0sp"
                android:text="Number Auto Modes"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/pit_auto_num_modes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_auto_num_modes_label"
                android:layout_alignBottom="@+id/pit_auto_num_modes_label"
                android:layout_alignLeft="@+id/pit_team_years"
                android:layout_alignStart="@+id/pit_team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_auto_num_modes_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_auto_num_modes"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_auto_num_modes"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="—"
                android:textSize="36sp" />

            <Button
                android:id="@+id/pit_auto_num_modes_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pit_auto_num_modes_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/pit_auto_num_modes_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                android:textSize="36sp" />

            <!-- auto_base_line -->

            <TextView
                android:id="@+id/pit_auto_base_line_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pit_auto_num_modes_label"
                android:layout_marginBottom="0sp"
                android:text="Auto Base Line?"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/pit_auto_base_line"
                android:layout_width="wrap_content"
