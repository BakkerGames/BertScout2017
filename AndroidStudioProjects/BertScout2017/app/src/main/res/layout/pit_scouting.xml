<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pit_scouting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/team_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Team"
        android:textSize="36sp" />

    <Spinner
        android:id="@+id/team_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/team_label"
        android:layout_marginLeft="250sp"
        android:layout_toEndOf="@+id/team_label"
        android:layout_toRightOf="@+id/team_label"
        android:minHeight="50dp"
        android:minWidth="100sp"
        tools:minHeight="50sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/team_label"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/pit_scouting_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="0sp">


            <TextView
                android:id="@+id/team_years_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Team Years"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/team_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/team_years_label"
                android:layout_marginLeft="150sp"
                android:layout_toEndOf="@+id/team_years_label"
                android:layout_toRightOf="@+id/team_years_label"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/team_years_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/team_years"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/team_years"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/team_years_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/team_years_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/team_years_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/team_members_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_years_label"
                android:layout_marginBottom="0sp"
                android:fontFamily="sans-serif"
                android:text="Team Members"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/team_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/team_members_label"
                android:layout_alignBottom="@+id/team_members_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/team_members_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/team_members"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/team_members"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="32sp" />

            <Button
                android:id="@+id/team_members_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/team_members_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/team_members_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="32sp" />


            <TextView
                android:id="@+id/robot_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_members_label"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="20sp"
                android:fontFamily="sans-serif"
                android:text="Robot Information"
                android:textSize="36sp" />


            <TextView
                android:id="@+id/height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/robot_info_label"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="20sp"
                android:fontFamily="sans-serif"
                android:text="Height"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/height_label"
                android:layout_alignBottom="@+id/height_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/height_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/height"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/height"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/height_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/height_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/height_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/height_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Weight"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/weight_label"
                android:layout_alignBottom="@+id/weight_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/weight_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/weight"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/weight"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/weight_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/weight_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/weight_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/num_cims_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Num CIMs"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/num_cims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/num_cims_label"
                android:layout_alignBottom="@+id/num_cims_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/num_cims_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/num_cims"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/num_cims"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/num_cims_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/num_cims_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/num_cims_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/max_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/num_cims_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Max Speed"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/max_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/max_speed_label"
                android:layout_alignBottom="@+id/max_speed_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:textSize="36sp" />

            <Button
                android:id="@+id/max_speed_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/max_speed"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/max_speed"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/max_speed_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/max_speed_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/max_speed_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/wheel_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/max_speed_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Wheel Type"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/wheel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/wheel_type_label"
                android:layout_alignBottom="@+id/wheel_type_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/team_years"
                android:maxLines="1"
                android:textSize="36sp" />


            <TextView
                android:id="@+id/wheel_layout_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wheel_type_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Wheel Layout"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/wheel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/wheel_layout_label"
                android:layout_alignBottom="@+id/wheel_layout_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/team_years"
                android:maxLines="1"
                android:textSize="36sp" />


            <TextView
                android:id="@+id/max_fuel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/wheel_layout_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Max Fuel"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/max_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/max_fuel_label"
                android:layout_alignBottom="@+id/max_fuel_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/max_fuel_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/max_fuel"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/max_fuel"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/max_fuel_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/max_fuel_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/max_fuel_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/shoot_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/max_fuel_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Shoot Speed"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/shoot_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shoot_speed_label"
                android:layout_alignBottom="@+id/shoot_speed_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="2"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/shoot_speed_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/shoot_speed"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/shoot_speed"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="-"
                
                android:textSize="36sp" />

            <Button
                android:id="@+id/shoot_speed_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shoot_speed_minus_btn"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/shoot_speed_minus_btn"
                android:minWidth="54dp"
                android:paddingBottom="0sp"
                android:paddingTop="0sp"
                android:text="+"
                
                android:textSize="36sp" />


            <TextView
                android:id="@+id/shoot_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shoot_speed_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Shoot Location"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/shoot_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shoot_location_label"
                android:layout_alignBottom="@+id/shoot_location_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/team_years"
                android:maxLines="1"
                android:textSize="36sp" />


            <TextView
                android:id="@+id/can_shoot_high_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shoot_location_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Can Shoot High"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/can_shoot_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/can_shoot_high_label"
                android:layout_alignLeft="@+id/shoot_location"
                android:layout_alignStart="@+id/shoot_location"
                android:ems="4"
                android:textOff=" "
                android:textOn="yes"
                
                android:textSize="24sp" />


            <TextView
                android:id="@+id/can_shoot_low_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/can_shoot_high_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Can Shoot Low"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/can_shoot_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/can_shoot_low_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="4"
                android:textOff=" "
                android:textOn="yes"
                
                android:textSize="24sp" />


            <TextView
                android:id="@+id/floor_pickup_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/can_shoot_low_label"
