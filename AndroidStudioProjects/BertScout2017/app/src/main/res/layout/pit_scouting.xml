                android:fontFamily="sans-serif"
                android:text="Floor Pickup"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/floor_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/floor_pickup_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="4"
                android:textOff=" "
                android:textOn="yes"
                
                android:textSize="24sp" />


            <TextView
                android:id="@+id/top_loader_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/floor_pickup_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Top Loader"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/top_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/top_loader_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="4"
                android:textOff=""
                android:textOn="yes"
                
                android:textSize="24sp" />


            <TextView
                android:id="@+id/auto_aim_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_loader_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Vision Sensor"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/auto_aim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/auto_aim_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="4"
                android:textOff=" "
                android:textOn="yes"
                
                android:textSize="24sp" />


            <TextView
                android:id="@+id/can_carry_gear_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/auto_aim_label"
                android:layout_marginBottom="10sp"
                android:fontFamily="sans-serif"
                android:text="Can Carry Gear"
                android:textSize="36sp" />

            <ToggleButton
                android:id="@+id/can_carry_gear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/can_carry_gear_label"
                android:layout_alignLeft="@+id/team_years"
                android:layout_alignStart="@+id/team_years"
                android:ems="4"
                android:textOff=" "
                android:textOn="yes"
                
                android:textSize="24sp" />


            <TextView
                android:id="@+id/can_climb_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/can_carry_gear_label"
                android:layout_marginBottom="10sp"
